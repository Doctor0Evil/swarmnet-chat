// File: config/ALN-Security-Model.aln

{
  "file": "config/ALN-Security-Model.aln",
  "purpose": "Central security model config for Bit.Hub",
  "core_schemas": [
    "src/aln/core/aln_interpreter.py",
    "src/lisp/core/lisp_interpreter.py",
    "src/lolcode/core/lolcode_interpreter.py"
  ],
  "audit_log": "logs/aln_security_audit.log",
  "policies": [
    {
      "id": "OWNER-ENFORCEMENT",
      "check_path": "src/aln/security/identity.py",
      "applies_to": ["ALN", "Lisp", "LOLCODE"],
      "rule": "input.sender == 'jacob_farmer' && input.signature == system.db['jacob_farmer'].sig",
      "deny_if": "not true",
      "action": "block_and_alert"
    }
  ]
}
